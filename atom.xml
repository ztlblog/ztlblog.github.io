</pre></td><td class='code'><pre><code class=''><span class='line'>class RedisMessageQueue 
</span><span class='line'>{
</span><span class='line'>  protected $redis_server;
</span><span class='line'>  protected $server;
</span><span class='line'>  protected $port;
</span><span class='line'>  protected $key;
</span><span class='line'>  public function__construct($server_config=array('IP'=&gt;'127.0.0.1','PORT'=&gt;'6379'),$key=&gt;'redis_message_queue',$p_connect=false)
</span><span class='line'>  {
</span><span class='line'>      if(empty($key))
</span><span class='line'>      {
</span><span class='line'>          throw new Exception('message queue key can not be empty);
</span><span class='line'>          $this-&gt;server=$server_config['IP'];
</span><span class='line'>          $this-&gt;port=$server_config['PORT'];
</span><span class='line'>          $this-&gt;key=$key;
</span><span class='line'>          $this-&gt;check_environment();
</span><span class='line'>          if($p_connect){
</span><span class='line'>              $this-&gt;pconnect();
</span><span class='line'>          }else{
</span><span class='line'>              $this-&gt;connect();
</span><span class='line'>          }
</span><span class='line'>      }       
</span><span class='line'>  }
